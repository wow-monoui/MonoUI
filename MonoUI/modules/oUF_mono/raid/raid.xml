<Ui xmlns='http://www.blizzard.com/wow/ui/'>
	<Button name="oUF_MainTank" inherits="SecureUnitButtonTemplate, BackdropTemplate" hidden="true" virtual="true" movable="true">
		<Frames>
			<Button name="$parentTarget" inherits="SecureUnitButtonTemplate, BackdropTemplate" >
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parent" >
						<Offset>
							<AbsDimension x="5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Attributes>
					<Attribute name="unitsuffix" type="string" value="target"/>
					<Attribute name="useparent-unit" type="boolean" value="true"/>
					<Attribute name="type1" type="string" value="target"/>
					<Attribute name="initial-unitWatch" type="boolean" value="true"/>
				</Attributes>
			</Button>
		</Frames>
	</Button>

	<Script file="indicators.lua" />
	<Script file="debuffs.lua" />
	<Script file="lib_raid.lua" />
	<Script file="core_raid.lua" />
</Ui>
